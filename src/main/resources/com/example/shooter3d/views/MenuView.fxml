<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id = "grad" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.shooter3d.controllers.MenuController" stylesheets="@../styles/MenuView.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id = "title" text="Shooter3D"/>
    <Button text="ИГРАТЬ" onAction="#onNewGameButtonClick"/>
    <Button text="СТАТИСТИКА" onAction="#onStatisticsButtonClick"/>
    <Button text="НАСТРОЙКИ" onAction="#onSettingsButtonClick"/>
    <Button text="ВЫХОД" onAction="#onExitButtonClick"/>
</VBox>
